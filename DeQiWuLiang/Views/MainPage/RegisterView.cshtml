            <div class="errormsg" id="address_span">
                <span style="float:left" id="address_error"></span>
                <span style="float:right;width:4vw;height:4vw"><img class="errorimg" src="~/Content/Images/worning.png" /></span>
            </div>
        </div>
    </div>
    <div class="iteams">
        <div class="iteam">
            <div class="above">
                <span class="text_span">手机号</span>
                <span class="input_span"><input id="phone" class="input" type="text" autocomplete="off" /></span>
            </div>
            <hr id="hr6" class="hr" />
            <div class="errormsg" id="phone_span">
                <span style="float:left" id="phone_error"></span>
                <span style="float:right;width:4vw;height:4vw"><img class="errorimg" src="~/Content/Images/worning.png" /></span>
            </div>
        </div>
    </div>
    <div class="iteams">
        <div class="iteam">
