@{
    ViewBag.Title = "注册账号";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}
@section head{
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta content="black" name="apple-mobile-web-app-status-bar-style" />
    <meta content="telephone=no" name="format-detection" />

    <div style="padding-top:32pt;padding-left:12pt;padding-right:12pt">
        <img style="width:100%" src="~/Content/Images/registerlogo.png" />
    </div>
    <div style="width:100%;padding-top:4pt">
        <div style="width:100%;height:40pt; margin:auto">
            <div style="width:90%;height:18pt; margin:auto">
                <span style="color:#0D122F; font-size:4vw; text-align:left;width:20%; float:left;padding:2pt">用户名</span>
                <span style="float:left; text-align:left; font-size:4vw; width:76%;padding:2pt"><input type="text" autocomplete="off" style="width:100%; font-size:4vw;border:0px;outline:none" /></span>
            </div>
            <hr id="hr1" style="margin:auto; width:90%;height:3px;border:none;border-top:3px ridge #2B5297" />
            <div style="margin:auto; width:90%; height:14pt; font-size:3vw;color:red;text-align:left">
                @if (true)
                {
                    <span style="float:left">错误信息</span>
                    <span style="float:right;width:4vw;height:4vw"><img style="width:100%;height:100%" src="~/Content/Images/worning.png" /></span>
                    <script type="text/javascript">
                        document.getElementById("hr1").style = "margin:auto; width:90%;height:3px;border:none;border-top:3px ridge red";
                    </script>
                }
            </div>
        </div>
    </div>
    <div style="width:100%;padding-top:4pt">
        <div style="width:100%;height:40pt; margin:auto">
            <div style="width:90%;height:18pt; margin:auto">
                <span style="color:#0D122F; font-size:4vw; text-align:left;width:20%; float:left;padding:2pt">用户名</span>
                <span style="float:right; text-align:left; font-size:4vw; width:76%;padding:2pt"><input type="text" autocomplete="off" style="width:100%; font-size:4vw;border:0px;outline:none" /></span>
            </div>
            <hr id="hr1" style="margin:auto; width:90%;height:3px;border:none;border-top:3px ridge #2B5297" />
            <div style="margin:auto; width:90%; height:14pt; font-size:3vw;color:red;text-align:left">
                @if (true)
                {
                    <span style="float:left">错误信息</span>
                    <span style="float:right;width:4vw;height:4vw"><img style="width:100%;height:100%" src="~/Content/Images/worning.png" /></span>
                    <script type="text/javascript">
                        document.getElementById("hr1").style = "margin:auto; width:90%;height:3px;border:none;border-top:3px ridge red";
                    </script>
                }
            </div>
        </div>
    </div>
}