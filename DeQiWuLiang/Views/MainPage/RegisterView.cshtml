@{
    ViewBag.Title = "注册账号";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}
@section head{
<meta content="yes" name="apple-mobile-web-app-capable" />
<meta content="black" name="apple-mobile-web-app-status-bar-style" />
<meta content="telephone=no" name="format-detection" />
<style>
    html, body {
        height: 100%;
        overflow-y: hidden;
    }

    .register_form {
        width: 100%;
        height: 84%;
        position: absolute;
        bottom: 0px;
    }

    .top {
        padding-top: 8%;
        padding-left: 12pt;
        padding-right: 12pt;
    }

    .logoimg {
        width: 100%;
    }

    .errorimg {
        width: 100%;
        height: 100%;
    }

    .iteams {
        width: 100%;
        height: 12%;
        padding-top: 2pt;
    }

    .iteam {
        width: 100%;
        height: 100%;
        margin: auto;
    }

    .above {
        width: 82%;
        height: 48%;
        margin: auto;
    }

    .input_span {
        float: right;
        text-align: left;
        font-size: 4vw;
        width: 74%;
        padding: 2pt;
    }

    .input {
        border-width: 1.3pt;
        border-style: none none none solid;
        border-color: #2B5297;
        width: 97%;
        font-size: 4vw;
        outline: none;
        padding-left: 3%;
    }

    .text_span {
        color: #0D122F;
        font-size: 4vw;
        text-align: left;
        width: 20%;
        float: left;
        padding: 2pt;
    }

    .hr {
        margin: auto;
        width: 82%;
        height: 3%;
        border: none;
        border-top: 0.5vw ridge #2B5297;
    }

    .errormsg {
        margin: auto;
        width: 90%;
        height: 14pt;
        font-size: 3vw;
        color: red;
        text-align: left;
        display: none;
    }
</style>

<script type="text/javascript">
    function CheckUsername() {
        var username = document.getElementById("username");
        var hr = document.getElementById("hr1");
        var span = document.getElementById("username_span");
        var error = document.getElementById("username_error");
        if (username.value == null || username.value.length <= 0) {
            username.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "用户名不能为空";
            return false;
        } else {
            username.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
            span.style = "margin:auto;width:82%;height:14pt;font-size:3vw;color:red;text-align:left;display:none";
            error.innerText = "";
            return true;
        }
    }

    function CheckPassword() {
        var password = document.getElementById("password");
        var hr = document.getElementById("hr2");
        var span = document.getElementById("password_span");
        var error = document.getElementById("password_error");
        if (password.value == null || password.value.length <= 0) {
            password.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "密码不能为空";
            return false;
        } else {
            password.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:none";
            error.innerText = "";
            return true;
        }
    }

    function CheckSurePassword() {
        var password = document.getElementById("password");
        var surepassword = document.getElementById("sure_password");
        var hr = document.getElementById("hr3");
        var span = document.getElementById("sure_password_span");
        var error = document.getElementById("sure_password_error");
        if (password.value != null && password.value.length > 0) {
            if (surepassword.value != password.value) {
                surepassword.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
                hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
                span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
                error.innerText = "密码不一致";
                return false;
            } else {
                surepassword.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
                hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
                span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:none";
                error.innerText = "";
                return true;
            }
        }
        else {
            surepassword.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "密码不能为空";
            return false;
        }
    }

    function CheckCopname() {
        var copname = document.getElementById("copname");
        var hr = document.getElementById("hr4");
        var span = document.getElementById("copname_span");
        var error = document.getElementById("copname_error");
        if (copname.value == null || copname.value.length <= 0) {
            copname.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "单位名称不能为空";
            return false;
        } else {
            copname.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:none";
            error.innerText = "";
            return true;
        }
    }

    function CheckAddress() {
        var address = document.getElementById("address");
        var hr = document.getElementById("hr5");
        var span = document.getElementById("address_span");
        var error = document.getElementById("address_error");
        if (address.value == null || address.value.length <= 0) {
            address.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "单位地址不能为空";
            return false;
        } else {
            address.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:none";
            error.innerText = "";
            return true;
        }
    }

    function CheckPhone() {
        var phone = document.getElementById("phone");
        var hr = document.getElementById("hr6");
        var span = document.getElementById("phone_span");
        var error = document.getElementById("phone_error");
        if (phone.value == null || phone.value.length <= 0) {
            phone.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "电话不能为空";
            return false;
        } else {
            phone.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:none";
            error.innerText = "";
            return true;
        }
    }

    function CheckMail() {
        var mail = document.getElementById("mail");
        var hr = document.getElementById("hr7");
        var span = document.getElementById("mail_span");
        var error = document.getElementById("mail_error");
        if (mail.value == null || mail.value.length <= 0) {
            mail.style = "border-width:1.3pt;border-style:none none none solid;border-color:red;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge red";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:block";
            error.innerText = "邮箱不能为空";
            return false;
        } else {
            mail.style = "border-width:1.3pt;border-style:none none none solid;border-color:#2B5297;width:97%;font-size:4vw;outline:none;padding-left:3%";
            hr.style = "margin:auto; width:82%;height:3%;border:none;border-top:0.5vw ridge #2B5297";
            span.style = "margin:auto;width:82%;height:40%;font-size:3vw;color:red;text-align:left;display:none";
            error.innerText = "";
            return true;
        }
    }

    function CheckAll() {
        if (CheckUsername() != false & CheckPassword() != false & CheckSurePassword() != false & CheckCopname() != false & CheckAddress() != false & CheckPhone() != false & CheckMail() != false) {
            //document.getElementById("form").submit();
        }
    }

    function GoBackToLoginView() {
        window.location.href = "/MainPage/Login";
    }
</script>

<div class="top">
    <img class="logoimg" src="~/Content/Images/registerlogo.png" />
</div>
<form class="register_form" action="">
    <div class="iteams">
        <div class="iteam">
            <div class="above">
                <span class="text_span">用户名</span>
                <span class="input_span"><input id="username" class="input" type="text" autocomplete="off" /></span>
            </div>
            <hr id="hr1" class="hr" />
            <div class="errormsg" id="username_span">
                <span style="float:left" id="username_error"></span>
                <span style="float:right;width:4vw;height:4vw"><img class="errorimg" src="~/Content/Images/worning.png" /></span>
